<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="45dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="88dp"
        android:text="ℕ𝕖𝕧𝕠'𝕤 𝕋𝕣𝕚𝕧𝕚𝕒"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="172dp"
        android:text="Enter Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:autofillHints="Enter Name"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/download"
        android:layout_width="165dp"
        android:layout_height="54dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton"
        android:onClick="goToSite"
        android:text="Bibi's Adventure"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/continued"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="@+id/download"
        app:layout_constraintTop_toBottomOf="@+id/Basic" />

    <ImageButton
        android:id="@+id/Ten_Questions"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/topicbuttonclicked"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <ImageButton
        android:id="@+id/Basic"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/topicbutton"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/Lives"
        app:layout_constraintStart_toStartOf="@+id/Lives"
        app:layout_constraintTop_toBottomOf="@+id/Lives" />

    <ImageButton
        android:id="@+id/Lives"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/topicbutton"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/Ten_Questions"
        app:layout_constraintStart_toStartOf="@+id/Ten_Questions"
        app:layout_constraintTop_toBottomOf="@+id/Ten_Questions" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lives Mode"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Lives"
        app:layout_constraintEnd_toEndOf="@+id/Lives"
        app:layout_constraintStart_toStartOf="@+id/Lives"
        app:layout_constraintTop_toTopOf="@+id/Lives" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Mode"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Basic"
        app:layout_constraintEnd_toEndOf="@+id/Basic"
        app:layout_constraintStart_toStartOf="@+id/Basic"
        app:layout_constraintTop_toTopOf="@+id/Basic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten Questions Mode"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Ten_Questions"
        app:layout_constraintEnd_toEndOf="@+id/Ten_Questions"
        app:layout_constraintStart_toStartOf="@+id/Ten_Questions"
        app:layout_constraintTop_toTopOf="@+id/Ten_Questions" />

</androidx.constraintlayout.widget.ConstraintLayout>